<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication2</title>
    <link rel="stylesheet" href="~/css/css.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/css3.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<style>
    .logo-container {

        top: 1px;
        /* Adjust the top position as needed */
        left: 10px;
        /* Adjust the left position as needed */
        z-index: 1000;
        /* Ensure the logo appears above other content */
    }


    .logo {
        width: 150px;
        /* Adjust the width as needed */
    }
</style>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3"
            style="margin:35px;">
            <div class="container-fluid">
                @* <a class="gradient-text letter" asp-area="" asp-controller="Home" asp-action="Index">BOOKBRIDGES</a>
                *@



                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="logo-container">
                        <img src="~/image/b.png" alt="Logo" class="logo">
                    </div>

                    <ul class="navbar-nav flex-grow-1" style="margin-left:70px;">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <span class="navbar-text">
                                    Welcome, @User.Identity.Name!
                                </span>
                            </li>
                        }


                        <li>
                            <a class="btn draw-border" href="/Livre/css">Home</a>
                        </li>


                    </ul>



                </div>
            </div>
        </nav>
    </header>


    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
