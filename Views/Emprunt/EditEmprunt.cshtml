@model WebApplication2.Models.Emprunt

@{
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/c3.css" asp-append-version="true" />

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Ajouter Module</title>

    <style>
        /* Add your existing CSS styles here */

        /* Style to separate label and input */
        .input-container {
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
            /* Adjust as needed */
        }

        .text-small-uppercase {
            margin-bottom: 5px;
            /* Adjust as needed */
        }
    </style>
    <style>
        .logo-container {
            position: fixed;
            top: 10px;
            /* Adjust the top position as needed */
            left: 10px;
            /* Adjust the left position as needed */
            z-index: 1000;
            /* Ensure the logo appears above other content */
        }


        .text-small-uppercase.custom-button {
            display: block;
            width: 150px;
            height: 60px;
            text-align: center;
            padding: 10px;
            text-decoration: none;
            background-color: #f79577;
            color: white;
            border-radius: 5px;
            position: fixed;
            bottom: 10px;
            /* Adjust the distance from the bottom */
            left: 200px;
            /* Adjust the distance from the left */
            z-index: 1000;
            /* Set z-index to make sure it's above other elements */
        }


        .logo {
            width: 100px;
            /* Adjust the width as needed */
            height: auto;
        }
    </style>
</head>

<body>


    <link href='https://fonts.googleapis.com/css?family=Montserrat:700' rel='stylesheet' type='text/css'>

    <main style="margin:40px">
        <figure>
            <picture>

                <img src="https://i.pinimg.com/originals/ee/5c/11/ee5c11685f708525cb3c2c786f98b153.gif"
                    alt="Citymap illustration" />
            </picture>
        </figure>
        <div class="headline">
            <h2 class="text-headline" style="font-size:20px;">Edit Emprunt</h2>
            <h3 class="text-subheadline" style="font-size:15px;">Building a community, one subscriber at a time. Ajouter
                Abonné – Where connections flourish and stories unfold.</h2>
        </div>

        <form asp-action="EditEmprunt" asp-route-empruntId="@Model.Id" method="post">
            <hr />
            <span>
                <label for="username" class="text-small-uppercase" style="font-size:15px;"
                    id="usernameLabel">AbonneId</label>
                <br><br>


                <input asp-for="AbonneId" class="form-control" />
                <span asp-validation-for="AbonneId" class="text-danger"></span>

            </span>
            <br>

            <span>
                <label for="username" class="text-small-uppercase" style="font-size:15px;" id="usernameLabel">LivreId
                </label>
                <br><br>

                <input asp-for="LivreId" class="form-control" />
                <span asp-validation-for="LivreId" class="text-danger"></span>
            </span>
            <br>

            <span>
                <label for="username" class="text-small-uppercase" style="font-size:15px;"
                    id="usernameLabel">DateEmprunt
                </label>
                <br><br>

                <input asp-for="DateEmprunt" class="form-control" />
                <span asp-validation-for="DateEmprunt" class="text-danger"></span>
            </span>
            <br>

            <span>
                <label for="username" class="text-small-uppercase" style="font-size:15px;" id="usernameLabel">LivreId
                </label>
                <br><br>

                <input asp-for="DateRetour" class="form-control" />
                <span asp-validation-for="DateRetour" class="text-danger"></span>


            </span>
            <br> <br>


            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </form>

</body>
